<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Benvingut a {{ main_brand_title }}{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('semantic/semantic.min.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{#<!-- Page Contents -->#}
<div class="pusher">

    <div class="ui inverted vertical masthead center aligned segment">

        <div class="ui container">
            <div class="ui large secondary inverted pointing menu">
                <div class="left">
                    <h1 class="ui inverted header"><a href="{{ path('front_homepage') }}">{{ main_brand_title }}</a></h1>
                </div>
            </div>
        </div>
    </div>

    <div class="ui vertical stripe segment">
        <div class="ui middle aligned stackable grid container">
            <div class="row">
                {% for flash_message in app.session.flashBag.get('notice') %}
                    <div class="ui success message">
                        <div class="header">Formulari Completat</div>
                        <p>{{ flash_message }}</p>
                    </div>
                {% endfor %}
                {% for flash_message in app.session.flashBag.get('error') %}
                    <div class="ui error message">
                        <div class="header">Error</div>
                        <p>{{ flash_message }}</p>
                    </div>
                {% endfor %}
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>

</div>

{% block javascripts %}
    <script
            src="https://code.jquery.com/jquery-3.1.1.min.js"
            integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
            crossorigin="anonymous">
    </script>
    <script src="{{ asset('semantic/semantic.min.js') }}"></script>
{% endblock %}
</body>
</html>
